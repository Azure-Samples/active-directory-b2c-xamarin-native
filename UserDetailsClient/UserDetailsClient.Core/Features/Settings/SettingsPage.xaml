<?xml version="1.0" encoding="utf-8" ?>
<framework:BaseContentPage   
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="UserDetailsClient.Core.Features.Settings.SettingsPage"
    
    xmlns:framework="clr-namespace:UserDetailsClient.Core.Framework"
    xmlns:local="clr-namespace:UserDetailsClient.Core.Features.Settings"
    
    x:DataType="local:SettingsViewModel"
    x:TypeArguments="local:SettingsViewModel"
    >
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Settings Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                />
            <StackLayout Orientation="Horizontal">
                <Label Text="Force Automatic Login" />
                <Switch IsToggled="{Binding ForceAutomaticLogin}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</framework:BaseContentPage>